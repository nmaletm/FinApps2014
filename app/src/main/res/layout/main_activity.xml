<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.inteam.estrellawallet.BudgetActivity"
    android:background="@color/light_blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Balance"
        android:id="@+id/balance"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="26dp"
        android:layout_above="@+id/points"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/balance_value"
        android:textSize="22dp"
        android:textColor="@color/dark_blue"
        android:layout_below="@+id/balance"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Punts Estrella"
        android:id="@+id/points"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textSize="24dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/points_value" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/points_value"
        android:textSize="18dp"
        android:textColor="@color/dark_blue"
        android:enabled="false"
        android:layout_below="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageButton"
        android:src="@drawable/ic_add_box_white_48dp"
        android:scaleType="centerCrop"
        android:layout_toEndOf="@+id/points"
        android:layout_alignTop="@+id/points_value"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
